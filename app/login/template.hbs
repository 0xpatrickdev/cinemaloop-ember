<!-- app/pods/index/template.hbs -->

<header>
  <a href="#" class="logo"><img src="/images/index/cinemaLogo.png" alt="" /></a>
  <h2 id="tagline">Welcome! Please Log In.</h2>
  <hr class="cl-hr-127" />
<img src="/images/login/confer_white.png" class="logImg" alt="" />
<p>
  Please type your username and password
</p>
</header>
{{!-- app/templates/login.hbs --}}
<form class="form-horizontal" {{action 'authenticate' on='submit'}}>
  <label for="identification">Email</label>
  {{input id='identification' placeholder='Enter Email Address' value=identification}}
  <label for="password">Password</label>
  {{input id='password' placeholder='Enter Password' type='password' value=password}}
  <button type="submit">Login</button>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</form>
