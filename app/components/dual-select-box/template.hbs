<div class="row row-centered">
  <div class="col-md-4 col-centered">
    <form>
      <div class="form-group">
        <label class="form-text">I am</label>
        {{#x-select value=model.gender as |xs|}}
          {{#xs.option value="Straight"}}Straight{{/xs.option}}
          {{#xs.option value="Gay"}}Gay{{/xs.option}}
          {{#xs.option value="Lesbian"}}Lesbian{{/xs.option}}
          {{#xs.option value="Other"}}Other{{/xs.option}}
        {{/x-select}}
      </div>
      <div class="form-group">
          {{#x-select value=model.gender as |xs|}}
            {{#xs.option value="Man"}}Man{{/xs.option}}
            {{#xs.option value="Woman"}}Woman{{/xs.option}}
            {{#xs.option value="Transgender"}}Transgender{{/xs.option}}
            {{#xs.option value="Other"}}Other{{/xs.option}}
          {{/x-select}}
      </div>
      {{#link-to 'signup.2'}}
        <button type="submit" class="btn-continue">Continue</button>
      {{/link-to}}
    </form>
  </div>
</div>
